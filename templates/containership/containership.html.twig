{% extends 'base.html.twig' %}

  {% block body %}

    <h1>New container ship</h1>

    <form method="post">
      <div>
        <label class="form-label">Name</label>
        <input type="text" name="name" class="form-control" id="name">
      </div>
      <div>
        <label class="form-label">Captain Name</label>
        <input type="text" name="captainName" class="form-control" id="captainName">
      </div>
      <div>
        <label class="form-label">Container Limit</label>
        <input type="number" name="containerLimit" class="form-control" id="containerLimit">
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>

  {% endblock %}
